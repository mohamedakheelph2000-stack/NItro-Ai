# ============================================
# Nitro AI v6.0 Configuration File
# ============================================
# Copy this file to .env and customize settings
#
# BEGINNER TIP: Just copy as-is for local development!
# For public access via Cloudflare Tunnel, see CLOUDFLARE_TUNNEL_GUIDE.md

# ============================================
# AI MODEL SETTINGS
# ============================================

# Which AI provider to use?
# Options: "ollama" (local, free), "openai" (cloud, paid), "dummy" (testing)
AI_MODEL=ollama

# Which Ollama model to use?
# Popular options:
#   llama3     - Meta's latest (4.7GB) âœ… RECOMMENDED
#   llama2     - Good balance (4GB RAM)
#   phi3       - Ultra-fast (2.3GB RAM)
#   mistral    - High quality (4.1GB RAM)
#   codellama  - Great for code (4GB RAM)
OLLAMA_MODEL=llama3

# Ollama server URL (default is localhost)
OLLAMA_BASE_URL=http://localhost:11434

# How creative should responses be? (0.0 = boring, 1.0 = very creative)
AI_TEMPERATURE=0.7

# Maximum response length (tokens)
AI_MAX_TOKENS=500

# ============================================
# SERVER SETTINGS
# ============================================

# Enable debug mode? (True for development, False for production)
DEBUG_MODE=True

# Server port (8000 is standard, change if needed)
PORT=8000

# Server host (0.0.0.0 means accessible from network, 127.0.0.1 means localhost only)
HOST=0.0.0.0

# ============================================
# PRODUCTION SECURITY SETTINGS
# ============================================
# Configure these when exposing to internet via Cloudflare Tunnel

# Your Cloudflare Tunnel domain (e.g., https://nitro-ai.example.com)
# Leave empty for localhost-only mode
CLOUDFLARE_TUNNEL_DOMAIN=

# Allowed origins for CORS (comma-separated)
# Add your custom domain here for production access
# Example: https://nitro-ai.example.com,https://www.nitro-ai.example.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080,http://127.0.0.1:3000

# Enable API key authentication (RECOMMENDED for public access)
# Set to True when exposing to internet
ENABLE_API_KEY=False

# API Key for securing endpoints (generate a strong random key)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECURITY: Never commit this to Git! Keep it secret!
API_KEY=

# Enable rate limiting (RECOMMENDED for production)
# Prevents abuse by limiting requests per IP address
ENABLE_RATE_LIMIT=False

# Rate limit: requests per minute per IP
RATE_LIMIT_PER_MINUTE=30

# ============================================
# CLOUD AI SETTINGS (Optional)
# ============================================
# Only needed if you set AI_MODEL=openai or want to use cloud services

# OpenAI API Key (get from: https://platform.openai.com)
OPENAI_API_KEY=

# Anthropic (Claude) API Key (get from: https://anthropic.com)
ANTHROPIC_API_KEY=

# Google (Gemini) API Key (get from: https://makersuite.google.com)
GOOGLE_API_KEY=

# ============================================
# FEATURE FLAGS
# ============================================
# Enable or disable features

# Video generation (architecture ready)
ENABLE_VIDEO_GEN=False

# Web search (coming soon)
ENABLE_WEB_SEARCH=False

# Translation services (placeholder)
ENABLE_TRANSLATION=False

# Auto-detect user language?
ENABLE_AUTO_LANGUAGE_DETECT=True

# ============================================
# LANGUAGE SETTINGS
# ============================================

# Default language
# Options: en, es, fr, de, zh, ja, ar, pt, ru, it
DEFAULT_LANGUAGE=en

# Translation service (if ENABLE_TRANSLATION=True)
# Options: "openai", "google", "deepl", "none"
TRANSLATION_SERVICE=none

# Google Translate API Key (if using Google Translate)
GOOGLE_TRANSLATE_API_KEY=

# DeepL API Key (if using DeepL)
DEEPL_API_KEY=

# ============================================
# VIDEO GENERATION SETTINGS
# ============================================
# Only relevant if ENABLE_VIDEO_GEN=True

# Video generation service
# Options: "runway", "stable-diffusion", "sora", "none"
VIDEO_MODEL=none

# Runway ML API Key (if using Runway)
RUNWAY_API_KEY=

# Maximum video duration (seconds)
MAX_VIDEO_DURATION=16

# Default video resolution
DEFAULT_VIDEO_RESOLUTION=1280x720

# Video generation timeout (seconds)
VIDEO_GENERATION_TIMEOUT=600

# ============================================
# MEMORY & STORAGE SETTINGS
# ============================================

# Maximum messages to keep in conversation context
MAX_CONVERSATION_HISTORY=50

# Maximum sessions per user
MAX_SESSIONS_PER_USER=100

# Auto-delete old sessions?
AUTO_DELETE_OLD_SESSIONS=False

# Days to keep old sessions (if AUTO_DELETE_OLD_SESSIONS=True)
SESSION_RETENTION_DAYS=30

# ============================================
# CHAT SETTINGS
# ============================================

# Maximum characters in a user message
MAX_MESSAGE_LENGTH=1000

# ============================================
# RATE LIMITING
# ============================================
# Prevent abuse

# Enable rate limiting?
RATE_LIMIT_ENABLED=True

# Max requests per minute
MAX_REQUESTS_PER_MINUTE=60

# Max requests per hour
MAX_REQUESTS_PER_HOUR=1000

# ============================================
# LOGGING
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
